<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="application.TeamManagementController" prefHeight="600" prefWidth="800" alignment="top_center">
    <HBox spacing="10" alignment="center">
        <Button onAction="#handleProjectManagerButtonAction" prefHeight="80.0" prefWidth="200.0" text="Project Manager" style="-fx-background-color: linear-gradient(to bottom, #ffdd57, #ffaa00);">
            <HBox.margin>
                <Insets left="10.0" right="10.0" top="30.0" bottom="20.0" />
            </HBox.margin>
        </Button>
        <Button onAction="#handleTeamLeadButtonAction" prefHeight="80.0" prefWidth="200.0" text="Team Lead" style="-fx-background-color: linear-gradient(to bottom, #87ceeb, #4682b4);">
            <HBox.margin>
                <Insets left="10.0" right="10.0" top="30.0" bottom="20.0" />
            </HBox.margin>
        </Button>
        <Button onAction="#handleTeamMemberButtonAction" prefHeight="80.0" prefWidth="200.0" text="Team Member" style="-fx-background-color: linear-gradient(to bottom, #98fb98, #32cd32);">
            <HBox.margin>
                <Insets left="10.0" right="10.0" top="30.0" bottom="20.0" />
            </HBox.margin>
        </Button>
    </HBox>
</VBox>