<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ProjectManagerController" spacing="10" style="-fx-padding: 10;">
    <ComboBox fx:id="teamsComboBox" onAction="#handleTeamSelection" promptText="Select Team"/>
    <ComboBox fx:id="teamLeadComboBox" promptText="Select Team Lead"/>
    <HBox spacing="10">

        <Button text="View Summary" onAction="#handleViewTeamLeadSummaryButtonAction"/>
    </HBox>
    <ComboBox fx:id="teamMembersComboBox" promptText="Select Team Member"/>
    <HBox spacing="10">

        <Button text="View Summary" onAction="#handleViewTeamMemberSummaryButtonAction"/>
    </HBox>
</VBox>
