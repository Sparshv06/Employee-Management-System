<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.OperatorController">
    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Label fx:id="welcomeLabel" text="Welcome, User"/>
        </HBox>
    </top>
    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox spacing="10">
                <DatePicker fx:id="workDatePicker"/>
                <TextArea fx:id="summaryTextArea" prefHeight="100" prefWidth="200"/>
            </HBox>
            <HBox spacing="10">
                <Button fx:id="addButton" text="Add" onAction="#handleAddButtonAction"/>
                <Button fx:id="viewButton" text="View Summaries" onAction="#handleViewButtonAction"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
