<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ViewSummariesController" spacing="10" style="-fx-padding: 10;">
    <Label text="Work Summaries"/>
    <TableView fx:id="workTable" prefHeight="200" prefWidth="400">
        <columns>
            <TableColumn fx:id="workDateColumn" text="Work Date"/>
            <TableColumn fx:id="summaryColumn" text="Summary"/>
            <TableColumn fx:id="deleteColumn" text="Delete"/>
        </columns>
    </TableView>
    <Button text="Back" onAction="#handleBackButtonAction"/>
</VBox>
